        {
            "name": "Python Debugger: Gemini simple.py",
            "type": "python", # "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/patterns/workflows/Gemini-api-integration/simple.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/patterns/workflows/Gemini-api-integration/.env", // <-- This line loads the .env file
            "python": "${workspaceFolder}/venv/bin/python",
            "console": "integratedTerminal",
            "env": {
                "MY_CUSTOM_VARIABLE": "Hello from launch.json!",
                "MY_ENV_FILE": "${workspaceFolder}/patterns/workflows/Gemini-api-integration/.env"
            }
        }
    ]
